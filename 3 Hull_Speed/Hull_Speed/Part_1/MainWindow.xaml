<Window x:Class="Part_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hull Speed" Height="350" Width="525">
    <StackPanel Orientation="Horizontal">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Content="Name:"/>
                <TextBox x:Name="NameTextBox" Margin="3" Height="23" TextWrapping="Wrap" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Length:"/>
                <TextBox x:Name="LengthTextBox" Margin="3" Height="23" TextWrapping="Wrap" Text="" Width="120"/>
            </StackPanel>
            <Button x:Name="CalculateButton"  Content="Calculate Hull Speed" HorizontalAlignment="Center" FontWeight="Bold" Click="CalculateButton_Click"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Hull speed:"/>
                <TextBlock x:Name="CalculatedKnots" TextWrapping="Wrap" Margin="0,6,0,0" MinWidth="75" Text=""/>
                <Label Content="knots"/>
            </StackPanel>
        </StackPanel>
        <Image Source="03-Sailboat.jpg" RenderOptions.BitmapScalingMode="HighQuality"/>
    </StackPanel>
</Window>
